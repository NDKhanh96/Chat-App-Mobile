{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "global.css": [
                "global.css"
            ],
            "assets": [
                "assets"
            ],
            "@/*": [
                "./src/components/*"
            ],
            "~/*": [
                "./src/utils/*"
            ],
            "tailwind.config": [
                "./tailwind.config.js"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts.ts",
        "nativewind-env.d.ts"
    ]
}